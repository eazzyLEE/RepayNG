          <div class="row" id="dashboard">
            <h4 class="fs-16">Hello there, {{user.first_name}}</h4>
            <p class="col-sm-6 fs-12 no-padding">You can update your details using the form below</p>
          </div>
          <br />
          <div class="row card card-specialloan row">
            <form method="POST" action="/user/update" enctype="multipart/form-data">
              <input type="hidden" value="{{ user.id }}" name="user_id"/>
                {{ csrfField() }}

              <div class="col-sm-9 no-padding">
                <div class="row">
                  <div class="col-sm-3">
                    <div class="form-group m-t-10">
                    <select id="inputState" class="form-control bg-dark text-white" value="{{ user.title }}">
                        <option value="{{ user.title }}">{{ user.title }}</option>
                        <option value="">Title</option>
                        <option value="Mr">Mr</option>
                        <option value="Miss">Miss</option>
                        <option value="Mrs">Mrs</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group m-t-10">
                    <input type="text" name="firstname" class="form-control bordered" placeholder="First Name" value="{{ user.first_name }}" required/>
                      <i class="form-group__bar"></i>
                      <span class="help-block text-danger">First Name is required</span>
                    </div>
                  </div>
                  <div class="col-sm-5">
                    <div class="form-group m-t-10">
                      <input type="text" name="username" class="form-control bordered" placeholder="Last Name" value="{{ user.last_name }}" required/>
                      <i class="form-group__bar"></i>
                      <span class="help-block text-danger">Last Name is required</span>
                    </div>
                  </div>
                  <div class="col-sm-12">
                    <label class="bold">Date of Birth</label>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group m-t-10">
                      <select id="inputState" class="form-control bg-dark text-white">
                      <option value="{{ user.date_of_birth }}"></option>
                        <option value="">Day</option>
                        <option value="01">01</option>
                        <option value="02">02</option>
                        <option value="03">03</option>
                        <option value="04">04</option>
                        <option value="05">05</option>
                        <option value="06">06</option>
                        <option value="07">07</option>
                        <option value="08">08</option>
                        <option value="09">09</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                        <option value="13">13</option>
                        <option value="14">14</option>
                        <option value="15">15</option>
                        <option value="16">16</option>
                        <option value="17">17</option>
                        <option value="18">18</option>
                        <option value="19">19</option>
                        <option value="20">20</option>
                        <option value="21">21</option>
                        <option value="22">22</option>
                        <option value="23">23</option>
                        <option value="24">24</option>
                        <option value="25">25</option>
                        <option value="26">26</option>
                        <option value="27">27</option>
                        <option value="28">28</option>
                        <option value="29">29</option>
                        <option value="30">30</option>
                        <option value="31">31</option>
                      </select>
                      <span class="help-block text-danger">Day of Birth is required</span>
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group m-t-10">
                      <select id="inputState" class="form-control bg-dark text-white">
                      <option value="{{ user.month }}">{{ user.month }}</option>
                        <option value="">Month</option>
                        <option value="1">January</option>
                        <option value="2">Febuary</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                      </select>
                      <span class="help-block text-danger">Month is required</span>
                    </div>
                  </div>
                  <div class="col-sm-4">
                    <div class="form-group m-t-10">
                    <input type="text" name="year" class="form-control bg-dark" placeholder="Year" value="{{ user.year }}" required/>
                      <i class="form-group__bar"></i>
                      <span class="help-block text-danger">Year is required</span>
                    </div>
                  </div>
                  <div class="col-sm-12">
                    <label class="bold">Marital Status</label>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group m-t-10">
                      <select id="inputState" class="form-control bg-dark text-white">
                        <option value="{{ user.marital_status }}" selected>{{ user.marital_status }}</option>
                      <option value="Single">Single</option>
                        <option value="Married">Married</option>
                        <option value="Complicated">Complicated</option>
                      </select>
                      <span class="help-block text-danger">Marital Status is required</span>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group m-t-10">
                      <select id="inputState" class="form-control bg-dark text-white">
                        <option value="{{ user.gender }}">{{ user.gender }}</option>
                        <option value="">Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                      </select>
                      <span class="help-block text-danger">Gender is required</span>
                    </div>
                  </div>
                </div>

                <div class="row">
