                    <div class="form-group m-t-10">
                    <input type="text" name="address" class="form-control bordered" placeholder="Street Address" value="{{ user.address}}"required/>
                      <i class="form-group__bar"></i>
                      <span class="help-block text-danger">Street Address is required</span>
                    </div>
                  </div>
                  <div class="col-sm-7">
                    <div class="form-group m-t-10">
                      <select id="inputState" class="form-control bg-dark text-white">
                        <option selected value="{{ user.lga }}">{{ user.lga }}</option>
                        <option >Local Government Address</option>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-5">
                    <div class="form-group m-t-10">
                      <select id="inputState" class="form-control bg-dark text-white">
                          <option selected value="{{ user.state }}">{{ user.state }}</option>
                        <option>State</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-sm-7">
                    <div class="form-group m-t-10">
                    <input type="text" name="address" class="form-control bordered" placeholder="Phone Number" required value="{{ user.phone }}" />
                      <i class="form-group__bar"></i>
                      <span class="help-block text-dark">Kindly add (+234) before your phone number</span>
                      <span class="help-block text-danger">Phone Number is required</span>
                    </div>
                  </div>
                </div>
                <a href="/dashboard" class="btn btn-warning pull-right" role="button">Cancel</a>
                <button type="submit" class="btn btn-info btn-fill pull-right">Save</button>

                <div class="clearfix"></div>
              </div>
              
